{% extends 'base.html.twig' %}

{% block title %}
    Sorties | {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container">
        <h3>Filtrer les sorties</h3>
        <div class="formFilter">
            {{ form_start(sortiesFilter) }}
            {{ form_widget(sortiesFilter) }}
            <button class="btn btn-primary">Rechercher </button>
            {{ form_end(sortiesFilter) }}
        </div>

    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Clot√ªre inscriptions</th>
            <th>Inscrits/places</th>
            <th>Etat</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>Actions</th>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut|date('d/m/y H:i') }}</td>
                <td>{{ sortie.dateLimiteInscription|date('d/m/y') }}</td>
                <td>{{ sortie.participants.count }} / {{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td></td>
                <td>{{ sortie.organisateur.pseudo }}</td>
                {% if app.user != sortie.organisateur %}
                    <td><a href="#">Afficher</a></td>
                {% else %}
                    <td><a href="#">Modifier</a></td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
