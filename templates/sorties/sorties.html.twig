{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Liste des sorties
{% endblock %}

{% block body %}

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Clotûre inscriptions</th>
            <th>Inscrits/places</th>
            <th>Etat</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>Actions</th>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <td>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut|date('d/m/y H:i') }}</td>
                <td>{{ sortie.dateLimiteInscription|date('d/m/y') }}</td>
                <td>{{ sortie.participants.count }} / {{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td></td>
                <td>{{ sortie.organisateur.pseudo }}</td>
                <td>
                {% if app.user != sortie.organisateur %}
                    <a href="#">Afficher</a>
                {% else %}
                    <a href="#">Modifier</a>
                {% endif %}
                <a id="{{ sortie.id }}" class="inscription">S'inscrire</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        $(".inscription").on("click", function (event) {
            console.log(event);
            $.ajax({
                method: "POST",
                url: "{{ path('sorties_inscription') }}",
                data: {id: 1},
                success: function(){
                    alert("envoyé");
                }
            });
        })
    </script>

{% endblock %}
